<html>  
	<head>
		<meta charset="utf-8">
		<title>Index</title>
		<style type="text/css">
			.error{
				color: red;
			}
		</style>
	</head>
	<body>
		<h1>Login</h1>
		<form action='/login' method='GET'>
		  <label>Username</label><input type='text' name='username'/>
		  <label>Password</label><input type='password' name='password'/>
		  <input type='submit'/>
		</form>
		<h1>Sign Up</h1>
		<form action='/signup' method='GET'>
		  <label>Username</label><input type='text' name='username'/>
		  <label>Password</label><input type='password' name='password'/>
		  <input type='submit'/>
		  <div class="error">
		  	<%= errorText %>
		  </div>
		</form>
	<body>
</html>  